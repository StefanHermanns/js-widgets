{% macro renderTitle(event, config, _t, _f) %}
  <div class="wsb-table__col wsb-table__col-title {{ "with-badge" if event.type.badge }}">
    {% if event.type.badge %}
      <img class="wsb-table__img" src="{{ event.type.badge }}">
    {% endif %}
    <a href="{{ event.url }}" class="wsb-table__link">
      {{ event.title }}
    </a>
    {% if event.free %}
      <div class="wsb-free">{{ _t('schedule.event.free') | lower }}</div>
    {% endif %}
  </div>
{% endmacro %}
