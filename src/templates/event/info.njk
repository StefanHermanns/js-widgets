{% macro info(event, options, _t, _f) %}
    <div class="wsb-info">
        <div class="wsb-info__title">{{ _t('event.info.date') }}:</div>
        {% if event.schedule.atOneDay() %}
            {{ _f(event.schedule, 'full_long') }} {{ _f(event.schedule, 'timezone_short') }}
        {% else %}
            {{ _f(event.schedule, 'start_long') }}
            â€”<br>{{ _f(event.schedule, 'end_long') }} {{ _f(event.schedule, 'timezone_short') }}
        {% endif %}
        {% if event.location.online and event.schedule.timezone %}
            <div class="wsb-info__footer">
                {{ _t('event.info.now', {zone: _f(event.schedule, 'timezone_short')}) }}
                {{ DateTime.local().setZone(event.schedule.timezone).toFormat('t') }}
            </div>
        {% endif %}
    </div>
    <div class="wsb-info">
        <div class="wsb-info__title">{{ _t('event.info.loc') }}:</div>
        {{ _f(event.location) }}
        <div class="wsb-info__footer">{{ _f(event.language) }}</div>
    </div>
    {% if event.tickets.nonEmpty() %}
        <div class="wsb-tickets wsb-info">
            {% if event.free %}
                {% from "./freeTicket.njk" import freeTicket %}
                {{ freeTicket(event.tickets.free, _t, _f) }}
            {% else %}
                {% from "./paidTicket.njk" import paidTicket %}
                {% for ticket in event.tickets.paid %}
                    {{ paidTicket(ticket, _t, _f) }}
                {% endfor %}
            {% endif %}
        </div>
    {% endif %}
    {% if options.withTrainers %}
        <div class="wsb-trainers">
            {% for trainer in event.trainers %}
                <div class="wsb-trainer">
                    <div class="wsb-profile">
                        {% set url = options.trainerPageUrl + '?id=' + trainer.id %}
                        {% set photo = "background-image: url(" + trainer.photo + ");" %}
                        <a class="wsb-profile_img" href="{{ url }}" style="{{ photo }}"></a>
                        <div class="wsb-profile__name">
                            <div>
                                <a href="{{ url }}">{{ trainer.fullName() }}</a>
                            </div>
                            <div class="wsb-profile__rating">
                                {% from "../common/rating.njk" import render_rating_stars %}
                                {{ render_rating_stars(trainer.publicStats.rating, false) }}
                                {{ trainer.publicStats.rating.toPrecision(3) }} <span>from {{ trainer.publicStats.numberOfEvaluations }} reviews</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

{% endmacro %}
