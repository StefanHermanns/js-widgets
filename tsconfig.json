{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
//    "strict": true,
    "noEmit": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "test/**/*",
    "mock/*",
    "typings.d.ts"
  ]
}
